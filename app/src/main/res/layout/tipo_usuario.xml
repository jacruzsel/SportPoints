<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dannyang27.sportpoints.activities.TipoUsuario">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ToolbarStyle">

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/texto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="90dp"
                android:text="ENTRAR COMO"
                android:textAlignment="center"
                android:textSize="40sp"
                android:textStyle="normal|bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="vertical"
            android:gravity="center">

            <Button
                android:id="@+id/jugador_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jugador"
                android:textSize="18sp" />

            <Button
                android:id="@+id/arbitro_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/jugador_btn"
                android:layout_below="@+id/jugador_btn"
                android:text="Arbitro"
                android:textSize="18sp" />

            <Button
                android:id="@+id/centro_deportivo_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/arbitro_btn"
                android:layout_below="@+id/arbitro_btn"
                android:text="Centro Deportivo"
                android:textSize="18sp" />


            <Button
                android:id="@+id/atras_btn_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/centro_deportivo_btn"
                android:layout_centerHorizontal="true"
                android:text="ATRAS"
                android:textSize="18sp" />

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
